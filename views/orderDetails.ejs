<%- include('./Includes/head.ejs') %>

<body>
  <div class="fh5co-loader"></div>
  <div id="page">
    <nav class="fh5co-nav" role="navigation">
      <div class="container">
        <div class="top-menu">
          <div class="row">
            <div class="col-sm-2">
              <div id="fh5co-logo">
                <a href="/">Bhaukal <span class="sub">Store</span></a>
              </div>
            </div>
            <div class="col-sm-10 text-right menu-1">
              <ul>
                <li><a href="/exclusiveproduct">Shop</a></li>
                <li><a href="/checkorder">Track Order</a></li>
                <li><a href="/contact">Contact</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <div class="container">
      <div id="fh5co-intro">
        <div class="row animate-box">
          <div class="col-md-8 col-md-offset-2 col-md-pull-2">
            <h2>Your Order</h2>
          </div>
        </div>
      </div>

      <div class="detail-container">
        <h3><%= name %></h3>
        <p>Order Id: <%= orderId %></p>
        <p>Address:<%= hostel %>,<%= roomNo %></p>
        <p>Contact: <%= phone %></p>
        <p>T-Shirt: <%= product.name %></p>
        <p>Size: <%= size %></p>
        <p>Amount: Rs.<%= amount %></p>
        <% if(status=="TXN_FAILURE") { %>
        <p>Status: Your order failed</p>
        <% } else { %>
        <p>Status: <%= productStatus %></p>
        <% } %>
      </div>
    </div>

    <%- include('./Includes/bottom.ejs') %>
  </div>
</body>
